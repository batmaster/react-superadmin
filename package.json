{
  "name": "react-superadmin",
  "version": "1.0.0",
  "description": "A powerful React framework for building CRUD admin interfaces with TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.js",
  "scripts": {
    "dev": "pnpm --filter=@react-superadmin/web dev",
    "docs": "pnpm --filter=react-superadmin-docs start",
    "docs:dev": "pnpm --filter=react-superadmin-docs start",
    "docs:build": "pnpm --filter=react-superadmin-docs build",
    "docs:build:check": "pnpm docs:build && echo 'âœ… Documentation build successful'",
    "docs:validate": "./scripts/validate-docs.sh",
    "docs:serve": "pnpm --filter=react-superadmin-docs serve",
    "docs:deploy": "pnpm docs:build && npx firebase deploy",
    "firebase:init": "npx firebase init hosting",
    "firebase:deploy": "npx firebase deploy",
    "firebase:serve": "npx firebase serve --port 8080",
    "dev:all": "pnpm run --parallel dev docs",
    "build": "pnpm build:core && pnpm build:web",
    "build:core": "pnpm --filter=@react-superadmin/core build",
    "build:web": "pnpm --filter=@react-superadmin/web build",
    "test": "pnpm test:core && pnpm test:web",
    "test:core": "pnpm --filter=@react-superadmin/core test",
    "test:web": "pnpm --filter=@react-superadmin/web test",
    "test:watch": "pnpm --filter=@react-superadmin/core test:watch && pnpm --filter=@react-superadmin/web test:watch",
    "test:coverage": "pnpm --filter=@react-superadmin/core test:coverage && pnpm --filter=@react-superadmin/web test:coverage",
    "test:run": "./scripts/test.sh",
    "lint": "pnpm --filter=@react-superadmin/core lint && pnpm --filter=@react-superadmin/web lint",
    "clean": "pnpm --filter=@react-superadmin/core clean && pnpm --filter=@react-superadmin/web clean",
    "typecheck": "pnpm --filter=@react-superadmin/core typecheck && pnpm --filter=@react-superadmin/web typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,html,css,scss,less}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,html,css,scss,less}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml,html,css,scss,less}\" && eslint --fix \"**/*.{ts,tsx,js,jsx}\"",
    "format:script": "./scripts/format.sh",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "keywords": [
    "react",
    "admin",
    "crud",
    "typescript",
    "framework",
    "dashboard",
    "superadmin"
  ],
  "author": "batmaster",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/prompt": "^18.4.3",
    "@docusaurus/core": "^3.8.1",
    "@docusaurus/preset-classic": "^3.8.1",
    "@docusaurus/theme-live-codeblock": "^3.8.1",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.0.0",
    "firebase-tools": "^14.12.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write --ignore-unknown",
      "eslint --fix --max-warnings=0"
    ],
    "*.{json,jsonc,md,yml,yaml,html,css,scss,less}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
