#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ§ª Running pre-commit CI tests..."
echo "================================"

# Run the local CI test script
./scripts/test-ci.sh

# Exit early if CI tests fail
if [ $? -ne 0 ]; then
    echo "âŒ Pre-commit CI tests failed - commit blocked"
    echo "Please fix the issues above before committing"
    exit 1
fi

echo "âœ… Pre-commit CI tests passed"
echo ""
echo "ğŸ” Running lint-staged formatting and linting..."
echo "================================"

# Run lint-staged for formatting and linting
npx lint-staged

# Exit early if lint-staged fails
if [ $? -ne 0 ]; then
    echo "âŒ Lint-staged failed - commit blocked"
    echo "Please fix the formatting/linting issues above before committing"
    exit 1
fi

echo "âœ… Pre-commit checks completed - proceeding with commit"
exit 0
